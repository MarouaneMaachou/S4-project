import os 
import csv

def ajclass(photo, rep) :
    f = open("nom qu'on lui donne", "w")
    c = csv.writer(f)
    c.writerow([photo, rep])
    #pour cette fonction, on entre en argument le nom (personne + num de la photo) et si oui ou non elle représente d'après nos tests la bonne personne
    
def csvcount(tablephoto):
    with open(tablephoto, 'r') as f:
        i = 0
        for row in f:
            i += 1
    return i
   
        
def calculprecision (tableref, tableanswer) :
    true = 0
    n = csvcount(tableref) #suppose qu'on ait une table csv de référence
    c = csv.reader(open(tableref, "rb"))
    g = csv.reder(open(tableanswer, "rb"))
    for row in c :
        tot += 1
        for r in g : 
            if row[0] == r[0] :
                true += 1
                break
    return (true/n)
    #calcule la précision du algorithme à partir des photos qu'il a trié. Pas utilisable sur de très grandes quantités de données
    


